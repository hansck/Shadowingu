<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	card_view:cardCornerRadius="@dimen/card_radius"
	card_view:cardElevation="@dimen/card_elevation"
	card_view:cardUseCompatPadding="true">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/bg_clickable">

		<ImageView
			android:id="@+id/image"
			android:layout_width="match_parent"
			android:layout_height="90dp"
			android:clickable="true"
			android:focusable="true"
			android:scaleType="centerCrop"
			tools:src="@drawable/ic_default_image" />

		<TextView
			android:id="@+id/idLesson"
			style="@style/TitleMedium"
			android:layout_marginEnd="@dimen/item_margin_normal"
			android:layout_marginStart="@dimen/item_margin_normal"
			android:gravity="start"
			android:textSize="50sp"
			tools:text="1" />

		<TextView
			android:id="@+id/fastestTime"
			style="@style/SubheadingMedium"
			android:layout_below="@id/idLesson"
			android:layout_centerVertical="true"
			android:layout_marginBottom="@dimen/item_margin_tiny"
			android:layout_marginEnd="@dimen/item_margin_normal"
			android:layout_marginStart="@dimen/item_margin_normal"
			android:drawableLeft="@drawable/ic_timer"
			android:drawableStart="@drawable/ic_timer"
			android:gravity="start"
			android:textColor="@color/text_light_1"
			tools:text="05:00" />
	</RelativeLayout>
</android.support.v7.widget.CardView>