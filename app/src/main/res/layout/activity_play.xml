<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/bg_light_1"
	android:orientation="vertical"
	tools:context=".screen.play.PlayActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:weightSum="1">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="0.3">
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="0.7"
			android:gravity="center"
			android:orientation="vertical">

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center">

				<TextView
					android:id="@+id/word"
					style="@style/Word"
					android:layout_width="wrap_content"
					android:layout_gravity="center"
					android:background="@drawable/bg_border"
					android:paddingBottom="@dimen/item_margin_normal"
					android:paddingEnd="@dimen/item_margin_large"
					android:paddingStart="@dimen/item_margin_large"
					android:paddingTop="@dimen/item_margin_normal"
					tools:text="私"/>

				<ImageButton
					android:id="@+id/btnVoice"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:layout_marginLeft="@dimen/item_margin_small"
					android:layout_marginStart="@dimen/item_margin_small"
					android:layout_marginTop="@dimen/item_margin_normal"
					android:layout_toEndOf="@id/word"
					android:layout_toRightOf="@id/word"
					android:background="@android:color/transparent"
					android:src="@drawable/ic_microphone"/>
			</RelativeLayout>

			<TextView
				android:id="@+id/description"
				style="@style/ClickableMedium"
				android:layout_gravity="center"
				android:layout_marginTop="@dimen/item_margin_normal"
				android:text="@string/show_description"/>

			<LinearLayout
				android:id="@+id/descriptionContainer"
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:background="@drawable/bg_border"
				android:orientation="vertical">

				<TextView
					android:id="@+id/furigana"
					style="@style/SubheadingRegular"
					android:layout_width="wrap_content"
					android:layout_gravity="center"
					tools:text="わたし"/>

				<TextView
					android:id="@+id/romaji"
					style="@style/SubheadingRegular"
					android:layout_width="wrap_content"
					android:layout_gravity="center"
					tools:text="watashi"/>

				<TextView
					android:id="@+id/meaning"
					style="@style/SubheadingRegular"
					android:layout_width="wrap_content"
					android:layout_gravity="center"
					tools:text="I"/>
			</LinearLayout>

			<ImageButton
				android:id="@+id/btnShadowing"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginTop="@dimen/item_margin_normal"
				android:background="@android:color/transparent"
				android:src="@drawable/ic_mic"/>

			<TextView
				style="@style/BodyRegular"
				android:layout_width="wrap_content"
				android:layout_gravity="center"
				android:text="@string/click_to_shadowing"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>