<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/content"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_light_1"
              android:orientation="vertical"
              android:padding="@dimen/activity_vertical_margin"
              tools:context=".screen.login.LoginActivity">

	<EditText
		android:id="@+id/file1"
		style="@style/CustomEditText"
		android:hint="File 1"/>

	<EditText
		android:id="@+id/file2"
		style="@style/CustomEditText"
		android:layout_marginTop="@dimen/item_margin_tiny"
		android:hint="File 2"/>

	<EditText
		android:id="@+id/sampleRate"
		style="@style/CustomEditText"
		android:layout_marginTop="@dimen/item_margin_tiny"
		android:hint="Sample Rate"/>

	<Button
		android:id="@+id/btnCalculate"
		style="@style/ButtonBroad"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/item_margin_small"
		android:background="@color/ic_sign_in"
		android:text="Calculate Similarity"/>
</LinearLayout>