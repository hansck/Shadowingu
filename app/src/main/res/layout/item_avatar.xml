<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    card_view:cardCornerRadius="@dimen/card_radius"
                                    card_view:cardElevation="@dimen/card_elevation"
                                    card_view:cardUseCompatPadding="true">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/picture"
			android:layout_width="@dimen/avatar_medium"
			android:layout_height="@dimen/avatar_medium"
			tools:src="@drawable/ic_person"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:paddingEnd="@dimen/item_margin_small"
			android:paddingStart="@dimen/item_margin_small">

			<Button
				android:id="@+id/btnBuy"
				style="@style/ButtonTheme"
				android:layout_alignParentEnd="true"
				android:layout_alignParentRight="true"
				android:text="BUY"
				android:visibility="gone"/>

			<Button
				android:id="@+id/btnSetActive"
				style="@style/ButtonTheme"
				android:layout_alignParentEnd="true"
				android:layout_alignParentRight="true"
				android:text="SET ACTIVE"
				android:visibility="gone"/>

			<TextView
				android:id="@+id/activeText"
				style="@style/SubheadingMedium"
				android:layout_width="wrap_content"
				android:layout_alignParentEnd="true"
				android:layout_alignParentRight="true"
				android:visibility="visible"
				tools:text="ACTIVE"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:orientation="vertical">

				<TextView
					android:id="@+id/avatarName"
					style="@style/SubheadingMedium"
					android:layout_width="wrap_content"
					tools:text="Avatar Name"/>

				<TextView
					android:id="@+id/description"
					style="@style/SubheadingRegular"
					tools:text="Description"/>

				<TextView
					android:id="@+id/price"
					style="@style/SubheadingRegular"
					tools:text="Price : 2 GEM"/>
			</LinearLayout>
		</RelativeLayout>
	</LinearLayout>
</android.support.v7.widget.CardView>